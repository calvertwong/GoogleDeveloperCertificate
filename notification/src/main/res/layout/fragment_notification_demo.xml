<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/default_horizontal_margin"
    android:layout_marginTop="@dimen/default_vertical_margin"
    android:layout_marginBottom="@dimen/default_vertical_margin"
    android:layout_marginEnd="@dimen/default_horizontal_margin"
    tools:context=".NotificationDemoFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_normal_notification"
        style="@style/Common_Button_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_notification"
        app:layout_constraintBottom_toTopOf="@+id/btn_big_pic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_big_pic_notification"
        style="@style/Common_Button_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/big_picture_notification"
        app:layout_constraintBottom_toTopOf="@+id/btn_big_text_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_normal_notification" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_big_text_notification"
        style="@style/Common_Button_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/big_text_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_big_pic_notification" />


</androidx.constraintlayout.widget.ConstraintLayout>