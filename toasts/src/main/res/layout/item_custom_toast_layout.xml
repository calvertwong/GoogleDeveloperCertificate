<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_custom_toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_horizontal_margin"
    android:layout_marginEnd="@dimen/default_horizontal_margin"
    android:background="@color/design_default_color_secondary">

    <ImageView
        android:id="@+id/iv_front_alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/front_alert_icon"
        android:src="@drawable/ic_priority_high_red_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_custom_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_front_alert_icon"
        app:layout_constraintTop_toTopOf="@id/iv_front_alert_icon"
        tools:text="Custom toast text area." />

    <ImageView
        android:id="@+id/iv_end_alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/end_alert_icon"
        android:src="@drawable/ic_priority_high_red_24dp"
        app:layout_constraintStart_toEndOf="@+id/tv_custom_toast_text"
        app:layout_constraintTop_toTopOf="@+id/tv_custom_toast_text" />

</androidx.constraintlayout.widget.ConstraintLayout>